{
    "rules": {
	"indent": [2, 2, {"SwitchCase": 1}],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "never"
        ],
	"no-unused-vars": [2, {"vars": "all", "args": "after-used", "varsIgnorePattern": "React"}]
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true,
	"modules": true
    },
    "plugins": [
        "react"
    ]
}
